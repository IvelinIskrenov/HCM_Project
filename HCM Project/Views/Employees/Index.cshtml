@model IEnumerable<HCM_Project.Models.Employee>
@{
    ViewData["Title"] = "Employee List";
}
<h1>Employee List</h1>

<p>
    @if (User.IsInRole("HRAdmin") || User.IsInRole("Manager"))
    {
        <a asp-action="Create" class="btn btn-primary">Add Employee</a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Job Title</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.JobTitle</td>
                <td>@item.Salary</td>
                <td>@item.Department</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("HRAdmin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }

                    @if (User.IsInRole("HRAdmin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    else if (User.IsInRole("Manager") && @item.Role == "Employee")
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
